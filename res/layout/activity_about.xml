<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#000000">

    <TextView  android:id="@+id/textView3" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center" android:paddingBottom="20dp"
              android:text="Android Sensor" android:textColor="#ffffff" android:textSize="48sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="โปรแกรมนี้จัดทำเพื่อการศึกษาและเก็บข้อมูล"
            android:id="@+id/textView" android:layout_gravity="center" android:textColor="#ffffff"
            android:padding="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/textView1"
              android:layout_gravity="center" android:textColor="#ffffff" android:text="การทำงานของSensor Accelerometer &amp; Gyroscope"
              android:padding="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView2"
              android:layout_gravity="center" android:textColor="#ffffff"
              android:text="บนโทรศัพย์สมาร์ทโฟนในระบบปฏิบัติการแอนดรอยด์" android:padding="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView2"
              android:layout_gravity="center" android:textColor="#ffffff"
              android:text="เพื่อพัฒนาต่อยอดในการเขียนแอพพลิเคชั่นเกี่ยวกับการทำงานของ Sensor" android:padding="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView2"
              android:layout_gravity="center" android:textColor="#ffffff"
              android:text="กับผู้ที่ใช้โทรศัพย์สมาร์ทโฟน ในแต่ล่ะวัน" android:padding="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView5"
              android:layout_gravity="center" android:textColor="#ffffff" android:textSize="22sp"
              android:text="ผู้พัฒนา" android:paddingTop="20dp" android:paddingBottom="20dp" android:textStyle="bold"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/about1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="นายดนตรี ปุณฑริกกุล        รหัสนักศึกษา 055460201716-8"
            android:id="@+id/textView4" android:layout_gravity="center" android:textColor="#ffffff"
            android:paddingTop="10dp" android:paddingBottom="20dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/about2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="นายฐาปกรณ์ เฉลิมศรีวิวัฒน์ รหัสนักศึกษา 055460201722-6"
            android:id="@+id/textView4" android:layout_gravity="center" android:textColor="#ffffff"
            android:paddingTop="10dp"/>
    <FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical"
                 android:id="@+id/frameLayout">
        <Button tools:ignore="HardcodedText" android:id="@+id/btnback" android:layout_width="300dp"
                android:layout_height="wrap_content" android:layout_gravity="bottom|center"
                android:text="Back to main menu" android:textColor="#ffffff" android:textSize="24sp"/>
    </FrameLayout>
</LinearLayout>