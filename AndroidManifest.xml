<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sensor.androidsensor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sensor.androidsensor.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sensor.androidsensor.AccelerometerActivity"
            android:label="@string/title_activity_accelerometer" >
        </activity>
        <activity
            android:name="com.sensor.androidsensor.GyroscopeActivity"
            android:label="@string/title_activity_gyroscope" >
        </activity>
        <activity
            android:name="com.sensor.androidsensor.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="com.sensor.androidsensor.RecordLogActivity"
            android:label="@string/title_activity_record_log" >
        </activity>
        <activity android:name=".AboutActivity"/>
    </application>

</manifest>